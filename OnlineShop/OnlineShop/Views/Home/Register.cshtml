@model OnlineShop.ViewModels.UserLoginViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<form action="/Home/Register" method="post" class="card">
    <h2>Name</h2>
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control" />
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    <h2>Email</h2>
    <input type="text" name="Email" value="@Model.Email" placeholder="Email" class="form-control" />
    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    <h2>Address</h2>
    <input type="text" name="Address" value="@Model.Address" placeholder="Address" class="form-control" />
    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
    <h2>Username</h2>
    <input type="text" name="Username" value="@Model.Username" placeholder="Username" class="form-control" />
    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
    <h2>Password</h2>
    <input type="text" name="Password" value="@Model.Password" class="form-control" />
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    <h2>Confirm Password</h2>
    <input type="text" name="ConfirmPassword" value="@Model.ConfirmPassword" class="form-control" />
    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
    

    <input type="submit" value="Submit" />

</form>
