
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Login</h2>

<form action="/Home/Login" method="post" class="form-horizontal">
    <div class="form-group">
        <h4 class="col-md-2 control-label">Username</h4>
        <div class="col-md-10">
            <input type="text" name="airline_name" value="@Model.airline_name" placeholder="Agency Name" class="form-control" />
        </div>
    </div>

    
    <div class="form-group">
        <h4 class="col-md-2 control-label">Password</h4>
        <div class="col-md-10">
            <input type="password" name="password" value="@Model.password" class="form-control" />
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Login" />
        </div>
    </div>

</form>